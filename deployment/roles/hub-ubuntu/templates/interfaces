# interfaces(5) file used by ifup(8) and ifdown(8)
# Include files from /etc/network/interfaces.d:
source-directory /etc/network/interfaces.d

# configure first wifi interface to use DHCP
auto {{ploy_wlan0}}
iface wlan0 inet dhcp

# create ad-hoc network on second interface
# but don't activate it on boot automatically
auto {{ploy_wlan1}}
iface {{ploy_wlan1}} inet static
  address 10.0.23.23
  netmask 255.255.255.0
  wireless-channel {{ploy_adhoc_channel}}
  wireless-essid {{ploy_adhoc_ssid}}
  wireless-mode ad-hoc
